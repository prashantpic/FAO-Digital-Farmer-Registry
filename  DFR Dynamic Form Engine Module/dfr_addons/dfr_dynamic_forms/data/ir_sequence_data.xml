<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- noupdate="1" to prevent overwriting sequence on module update -->

        <record id="seq_dfr_form_version" model="ir.sequence">
            <field name="name">DFR Form Version Sequence</field>
            <field name="code">dfr.form.version.sequence</field>
            <field name="prefix">V</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/> <!-- Shared sequence across companies -->
            <field name="implementation">standard</field>
            <field name="number_next_actual">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>
</odoo>